@model IEnumerable<Category>
@{
    ViewData["Title"] = "CategoryHome";
}

<h2>CategoryHome</h2>
<table class="table table-bordered table-hover" width:"50px">
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.name<a asp-route-id="@item.id" asp-action="Edit"> | Edit</a><a asp-route-id="@item.id" asp-action="Delete" onclick="return confirm('are u sure?')"> | Delete</a></td>
        </tr>
    }
</table>